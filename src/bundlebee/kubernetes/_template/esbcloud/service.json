{
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "{{service.name}}",
      "labels": {
        "app": "{{service.name}}",
        "deploy.by": "{{user.name:-unknown}}",
        "deploy.at":"{{esbcloud.deploytime:-unset}}",
        "esbcloud.environment":"{{esbcloud.environment}}"
      }
    },
    "spec": {
      "type": "NodePort",
      "selector": {
        "app": "{{service.name}}"
      },
      "ports": [
        {
          "name":"service",
          "protocol": "TCP",
          "port": 8080,
          "targetPort": 8080,
          "nodePort": {{service.nodePort}}
        },
        {
          "name":"health",
          "protocol": "TCP",
          "port": 8888,
          "targetPort": 8888,
          "nodePort": {{service.healthPort}}
        },
        {
          "name":"debug",
          "protocol": "TCP",
          "port": {{service.debugPort}},
          "targetPort": {{service.debugPort}},
          "nodePort": {{service.debugPort}}
        }
      ]
    }
  }
