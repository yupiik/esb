{
  "apiVersion":"rbac.authorization.k8s.io/v1",
  "kind":"ClusterRole",
  "rules":[
    {
      "apiGroups":[
        "rbac.authorization.k8s.io"
      ],
      "resources":[
        "clusterrolebindings"
      ],
      "verbs":[
        "get",
        "list",
        "watch",
        "create",
        "delete",
        "patch",
        "update"
      ]
    },
    {
      "apiGroups":[
        "storage.k8s.io"
      ],
      "resources":[
        "storageclasses"
      ],
      "verbs":[
        "get"
      ]
    },
    {
      "apiGroups":[
        ""
      ],
      "resources":[
        "nodes"
      ],
      "verbs":[
        "list"
      ]
    }
  ],
  "metadata":{
    "name":"strimzi-cluster-operator-global",
    "labels":{
      "app":"strimzi",
      "deploy.by":"{{user.name:-unknown}}",
      "deploy.at":"{{esbcloud.environment}}",
      "esbcloud.environment":"{{esbcloud.environment}}"
    }
  }
}
